<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:elevation="10dp"

>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:elevation="@dimen/app_top"

    >

        <ImageView
            android:id="@+id/imagenOrganizacionRegistrada"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_weight="2.1"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/iconocontactowhite"
            android:layout_gravity="center_vertical"

        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"

        >
            <TextView
                android:id="@+id/nombreOrganizacionRegistrada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Titulo"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:maxLines="1"

            />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estado del Contacto:"
                android:gravity="center"
                android:layout_marginTop="10dp"
            />
            <TextView
                android:id="@+id/estadoOrganizacionRegistrada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo de Estado"
                android:gravity="center"
                android:textStyle="bold"
            />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>